{
  "name": "@salesforce/lwc-jest",
  "version": "0.6.2",
  "description": "Run Jest against LWC components in a Salesforce DX workspace environment",
  "main": "src/index.js",
  "license": "MIT",
  "files": [
    "bin/",
    "src/",
    "config.js"
  ],
  "repository": "git@github.com:salesforce/lwc-jest.git",
